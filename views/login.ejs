<div class="col-md-6">
	<div class="row">
		<div class="col-md-6">
			<h2>Iniciar sesión</h2>
		</div>
	</div>
	<form id="login-form" action="/sec_session/login" method="post">
		<div class="form-group">
			<input type="text" name="userName" id="userName" class="form-control" placeholder="Nombre de usuario">
		</div>
		<div class="form-group">
			<input type="password" name="password" id="password" class="form-control" placeholder="Contraseña" autocomplete="off">
		</div>
		<button type="submit" class="btn btn-primary">Entrar</button>
	</form>
</div>
