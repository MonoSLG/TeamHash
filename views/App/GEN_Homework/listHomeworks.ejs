<div class="col-md-12">
	<div class="row">
		<div class="col-md-12">
			<center><h2><%=user.name%> <%=user.lastName%></h2></center>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
		<thead>
			<tr>
				<th>Título</th>
				<th>Materia</th>
				<th>Tema</th>
				<th>Grado</th>				
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<% for(let i=0, len=data.length; i < len; i++) { %>
				<% let item = data[i] %>
				<tr>
					<td><%= item.title %></td>
					<td><%= item.subject.name %></td>
					<td><%= item.topic.title %></td>
					<td><%= item.grade%></td>
					<td>
						<% let moreUrl= '/viewHomework/' + item.id %>
						<a href="<%= moreUrl %>">Detalles</a>
					</td>
			<% }; %>
		</tbody>
	</table>
</div>
<!--_______________________________________TO DELETE______________________________-->
<div class="modal fade" id="myModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				 <button type="button" class="close" data-dismiss="modal">&times;</button>
				 <h4 class="modal-title">Eliminar estudiante</h4>
			</div>
			<div class="modal-body">
				<p>¿Está seguro de querer eliminar este estudiante?</p>
				<p id="textModel"></p>
			</div>
			<div class="modal-footer">
				<a id="linkModalRemove" class="btn btn-danger" href="#">Elminar</a>
				<button type="button" class="btn btn-default" data-dismiss="modal" >Cerrar</button>
			</div>
		</div>
	</div>
</div>

<script>
	function remove(id, name){
		$('#linkModalRemove').attr("href", "/gen_student/delete/"+id);
		$('#textModel').html("<strong>Name:</strong> " + name);
		$('#myModal').modal('show')
	}
</script>
