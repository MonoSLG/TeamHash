<div class="col-md-12">
	<div class="row">
		<div class="col-md-6">
			<h2>Listar Tareas Asignadas</h2>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
		<thead>
			<tr>
				<th>Tarea</th>
				<th>Materia</th>
				<th>Tema</th>
				<th>Sal√≥n</th>
				<th>Fecha Inicio</th>
				<th>Fecha Fin</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<% for(let i=0, len=data.length; i < len; i++) { %>
				<% let item = data[i] %>
				<tr>
					<td><%= item.homework.title %></td>
					<td><%= item.homework.subject.name %></td>
					<td><%= item.homework.topic.title %></td>
					<td><%= item.course.grade %> - <%= item.course.letter %></td>
					<td><%= item.startDate %></td>
					<td><%= item.endDate %></td>
					<td>
						<% let moreUrl= '/viewHomework?homeworkId=' + item.homework.id + '&courseId=' + item.course.id %>
						<a href="<%= moreUrl %>">Detalles</a>
					</td>
			<% }; %>
		</tbody>
	</table>
</div>