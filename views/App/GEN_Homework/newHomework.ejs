<div class="col-md-6 col-md-offset-3">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>
				<b>Sergio Posada Urrea</b>
			</h2>
		</div>
	</div>
	<form id="login-form" action="/gen_Homework/create" method="post">
		<div class="form-group">
			<label for="Materia">Email</label>
			<select name="subject" id="subject" class="form-control">
				<% sub.forEach(function(item) { %>
					<option value=<%=item.id %>>

						<%= item.name %>
					</option>
					<% }); %>
			</select>
		</div>

		<div class="form-group">
			<label for="Grado">Grado</label>

			<select name="grade" id="grade" class="form-control">
				<% for(var i=1; i < 12; i++) { %>
					<option value=<%=i %>>
						<%= i %>
					</option>
					<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="Tema">Tema</label>

			<select name="topic" id="topic" class="form-control">
				<% top.forEach(function(item) { %>
					<option value=<%=item.id %> >
						<%= item.title %>
					</option>
					<% }); %>
			</select>
		</div>
		<div class="form-group">
			<label for="Título">Título</label>

			<input type="text" name="title" id="title" value="TItulo1" class="form-control" placeholder="Título">
		</div>

		<div class="form-group">
			<label for="Descripción">Descripción</label>
			<textarea name="description" id="description" cols="30" rows="6" class="form-control" placeholder="Descripción">Descripción1</textarea>
		</div>
		<div class="form-group">
			<label for="Logros">Logros</label>
			<textarea name="achievement" id="achievement" cols="30" rows="6" class="form-control" placeholder="Logros">Logros1</textarea>

		</div>
		<div class="form-group">
			<div id="list"></div>
			<script>
				$(document).ready(function () {
					function handleFileSelect(evt) {
						var files = evt.target.files; // FileList object
						// files is a FileList of File objects. List some properties.
						var output = [];
						for (var i = 0, f; f = files[i]; i++) {


							console.log(f);


							output.push('<li><strong>', escape(f.name), '</strong> (', f.type || 'n/a', ') - ',
								f.size, ' bytes, last modified: ',
								f.lastModifiedDate.toLocaleDateString(), '</li>');
						}
						document.getElementById('list').innerHTML = '<ul>' + output.join('') + '</ul>';
					}
					document.getElementById('studyMaterials').addEventListener('change', handleFileSelect, false);


				});



			</script>

			<input type="file" id="studyMaterials" name="studyMaterials" multiple class="form-control" placeholder="Archivos">
		</div>
		<br>
		<div class="col-md-2 col-md-offset-5">
			<button type="submit" class="btn btn-primary">Crear</button>
		</div>

	</form>
</div>