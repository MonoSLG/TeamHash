<div class="col-md-12">
	<div class="row">
		<div class="col-md-6">
			<h2>List Roles</h2>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Permissions</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% for(let i=0, len=data.length; i < len; i++) { %>
				<% let item = data[i] %>
				<tr>
					<td><%= i+1 %></td>
					<td><%= item.name %></td>
					<td>
					<% if(item.permissions){ %>
						<ul class="list-inline">
						<% for(let j=0, len=item.permissions.length; j < len; j++) { %>
							<li><%= item.permissions[j].name %></li>
							<% if(j+1 < item.permissions.length){ %>
								&bull;
							<% }; %>
						<% }; %>
						</ul>
					<% }; %>
					</td>
					<td>
						<% let editURL= '/editRole/' + item.id %>
						<% if(SEC_SecurityService.verifyPermissionsToPath(res, editURL)){  %>
							<a style="color:green" href="<%= editURL %>">Edit</a>
						<% }; %>
					</td>
				</tr>
			<% }; %>
		</tbody>
	</table>
</div>
