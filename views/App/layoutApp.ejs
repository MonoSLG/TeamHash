<body id="body">

  <header id="header">

    <div class="pull-left">
        &emsp;
        <button type="button" class="btn btn-primary" onclick="openNav()">
          <span class="fa fa-info" style="transform: scale(1.5, 1.5);"></span> <span class="badge badge-light"><%= reminders.length %></span>
        </button>
      </div>


    <div class="container">

      <div id="logo" class="pull-left">
        <h2>StudyBook</h2>
      </div>

      <nav id="nav-menu-container">
        <ul class="nav-menu">
          
          <% allowedMenus.forEach(function(item) { %>
            <% if(item.showInNav){ %>
              <% if(item.sonsMenus && item.sonsMenus.length == 0 && item.isRootMenu){ %>
                <li><a href="<%= item.link %>"><%= item.text %></a></li>
              <% }else if(item.isRootMenu){ %>
                <li class="menu-has-children"><a href="<%= item.link %>"><%= item.text %></a>
                  <ul>
                    <% item.sonsMenus.forEach(function(son) { %>
                      <% if(son.showInNav && !son.isRootMenu){ %>
                        <li><a href="<%= son.link %>"><%= son.text %></a></li>
                      <% } %>
                    <% }); %>
                  </ul>
              <% } %>
            <% } %>
          <% }); %>
          <li><a href="/sec_session/logout">Cerrar Sesi√≥n</a></li>

        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header><!-- #header -->

  </Br>

  <div class=container-fluid>
      <% if (typeof messages !== 'undefined' && messages) { %>
        <% if (messages['error'].length > 0) { %>
          <div id="alertDanger" class="alert alert-danger">
            <% messages['error'].forEach(function(message) { %>
              <%= message %>
            <br>
            <% }); %>
          </div>
          <br>
        <% } %>
        <% if (messages['warning'].length > 0) { %>
          <div id="alertWarning" class="alert alert-warning">
            <% messages['warning'].forEach(function(message) { %>
              <%= message %>
            <br>
            <% }); %>
          </div>
          <br>
          <% } %>
        <% if (messages['success'].length > 0) { %>
          <div id="alertSuccess" class="alert alert-success">
            <% messages['success'].forEach(function(message) { %>
              <%= message %>
            <br>
            <% }); %>
          </div>
          <br>
        <% } %>
      <% } %>
    </div>

  <main id="main" class="container-fluid">
    <%- body %>
  </main>

  

  <footer>
    <script src="/js/dependencies/sails.io.js"></script>

    

    <script>
      $(document).ready(function() {
        
        $('#table').dataTable( {
          "responsive": true,
          "ordering":false,
          "lengthChange":false,
          "paging":false,
          "info":false
        });
        
        $("#alertDanger").fadeOut(10000);
        $("#alertWarning").fadeOut(10000);
        $("#alertSuccess").fadeOut(10000);
      });

      function openNav() {
          document.getElementById("mySidenav").style.width = "250px";
      }
      function closeNav() {
          document.getElementById("mySidenav").style.width = "0";
      }
    </script>

  </footer>

