<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

  <% reminders.forEach(function(item) { %>
    <a href="/viewHomework/<%= item.homework.id %>"><%= item.homework.title %> - <%= item.endDate %></a>
  <% }); %>
</div>


