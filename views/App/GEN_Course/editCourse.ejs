<div class="col-md-6">
	<div class="row">
		<div class="col-md-6">
			<h2>Editar curso</h2>
		</div>
	</div>
	<form id="login-form" action="/gen_course/update/<%= data.id %>" method="post">
		<div class="form-group">
			<input type="number" name="grade" id="grade" class="form-control" placeholder="Grado" value="<%= data.grade %>">
		</div>
		<div class="form-group">
			<input type="text" name="letter" id="letter" class="form-control" placeholder="Salón" value="<%= data.letter %>">
		</div>
		<div class="form-group">
			<input type="number" name="year" id="year" class="form-control" placeholder="Año" value="<%= data.year %>">
		</div>
		<br>
		<button type="submit" class="btn btn-primary">Actualizar</button>
	</form>
</div>
