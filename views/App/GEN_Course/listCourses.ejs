<div class="col-md-12">
	<div class="row">
		<div class="col-md-6">
			<h2>List Courses</h2>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Grade</th>
			<th>Letter</th>
			<th>Year</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% for(let i=0, len=data.length; i < len; i++) { %>
			<% let item = data[i] %>
			<tr>
				<td><%= i+1 %></td>
				<td><%= item.grade %></td>
				<td><%= item.letter %></td>
				<td><%= item.year %></td>
				<td>
					<% let editURL= '/editCourse/' + item.id %>
					<a style="color:green" href="<%= editURL %>">Edit</a>
					&bull;
					<a style="color:red" href="#" onclick="remove('<%= item.id %>', '<%= item.name %>')">Remove</a>
				</td>
		<% }; %>
	</tbody>
</table>
</div>
<!--_______________________________________TO DELETE______________________________-->
<div class="modal fade" id="myModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				 <button type="button" class="close" data-dismiss="modal">&times;</button>
				 <h4 class="modal-title">Remove Course</h4>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to remove the Course?</p>
				<p id="textModel"></p>
			</div>
			<div class="modal-footer">
				<a id="linkModalRemove" class="btn btn-danger" href="#">Remove</a>
				<button type="button" class="btn btn-default" data-dismiss="modal" >Close</button>
			</div>
		</div>
	</div>
</div>

<script>
	function remove(id, name){
		$('#linkModalRemove').attr("href", "/gen_course/delete/"+id);
		$('#textModel').html("<strong>Name:</strong> " + name);
		$('#myModal').modal('show')
	}
</script>
