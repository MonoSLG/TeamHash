<div class="col-md-12">
	<div class="row">
		<div class="col-md-6">
			<h2>Listar docentes</h2>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Nombre</th>
				<th>Apellido</th>
				<th>Teléfono</th>
				<th>Correo</th>
				<th>Accions</th>
			</tr>
		</thead>
		<tbody>
			<% for(let i=0, len=data.length; i < len; i++) { %>
				<% let item = data[i] %>
				<tr>
					<td><%= i+1 %></td>
					<td><%= item.name %></td>
					<td><%= item.lastName %></td>
					<td><%= item.phone %></td>
					<td><%= item.email %></td>
					<td>
						<% let editURL= '/editTeacher/' + item.id %>
						<a style="color:green" href="<%= editURL %>">Editar</a>
						&bull;
						<a style="color:red" href="#" onclick="remove('<%= item.id %>', '<%= item.name %>')">Elminar</a>
					</td>
			<% }; %>
		</tbody>
	</table>
</div>
<!--_______________________________________TO DELETE______________________________-->
<div class="modal fade" id="myModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				 <button type="button" class="close" data-dismiss="modal">&times;</button>
				 <h4 class="modal-title">Eliminar docente</h4>
			</div>
			<div class="modal-body">
				<p>¿Está seguro de querer eliminar éste docente?</p>
				<p id="textModel"></p>
			</div>
			<div class="modal-footer">
				<a id="linkModalRemove" class="btn btn-danger" href="#">Eliminar</a>
				<button type="button" class="btn btn-default" data-dismiss="modal" >Cerrar</button>
			</div>
		</div>
	</div>
</div>

<script>
	function remove(id, name){
		$('#linkModalRemove').attr("href", "/gen_teacher/delete/"+id);
		$('#textModel').html("<strong>Name:</strong> " + name);
		$('#myModal').modal('show')
	}
</script>
