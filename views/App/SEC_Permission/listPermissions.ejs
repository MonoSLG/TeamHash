<div class="col-md-12">
	<div class="row">
		<div class="col-md-6">
			<h2>List Permissions</h2>
		</div>
	</div>
	<table class="table table-striped table-bordered" id="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% let i=1 %>
		<% data.forEach(function(item) { %>
			<tr>
				<td><%= item.id %></td>
				<td><%= item.name %></td>
				<td><%= item.description %></td>
				<td>
					<% let editURL= '/editPermission/' + item.id %>
					<% let removeURL= '/sec_permission/delete/' + item.id %>
					<% if(SEC_SecurityService.verifyPermissionsToPath(res, editURL)){  %>
						<a style="color:green" href="<%= editURL %>">Edit</a> &bull;
					<% }; %>
					<% if(SEC_SecurityService.verifyPermissionsToPath(res, removeURL)){  %>
						<a style="color:red" href="#" onclick="remove('<%= item.id %>', '<%= item.name %>', '<%= item.description %>')">Remove</a>
					<% }; %>
				</td>
			</tr>
			<% i++ %>
		<% }); %>
	</tbody>
</table>
</div>

<div class="modal fade" id="myModal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				 <button type="button" class="close" data-dismiss="modal">&times;</button>
				 <h4 class="modal-title">Remove Menu</h4>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to remove the permission?</p>
				<p id="nameModel"></p>
				<p id="descriptionModel"></p>
			</div>
			<div class="modal-footer">
				<a id="linkModalRemove" class="btn btn-danger" href="#">Remove</a>
				<button type="button" class="btn btn-default" data-dismiss="modal" >Close</button>
			</div>
		</div>
	</div>
</div>

<script>
	function remove(id, name, description){
		$('#linkModalRemove').attr("href", "/sec_permission/delete/"+id);
		$('#nameModel').html("<strong>Name:</strong> " + name);
		$('#descriptionModel').html("<strong>Description:</strong> " + description);
		$('#myModal').modal('show')
	}
</script>